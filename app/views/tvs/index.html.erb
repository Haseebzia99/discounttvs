<div class="container">
  <div class="index-page-row">
    <div class="filter-container col-4">
      <%= simple_form_for :search, url: tvs_path,  method: :get, remote: true do |f|%>
        <%= f.input :name, collection: @tvs_all.map(&:name).uniq %>
        <%= f.input :size, collection: @tvs_all.map(&:size).uniq %>
        <%= f.input :year, collection: @tvs_all.map(&:year).uniq %>
        <%= f.input :price, collection: @tvs_all.map(&:price).uniq %>
        <div class="d-flex justify-content-space-around text-align-center">
          <div class="mr-5">
            <%= f.submit "Search", class: "btn btn-secondary" %>
          </div>
          <div>
            <%= link_to 'View All', tvs_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-8">
      <%= render 'shared/tvsindex', tvs: @tvs %>
    </div>
  </div>


</div>





