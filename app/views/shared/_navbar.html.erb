<header>
  <div class="nav-conatiner">
    <input type="checkbox" name="" id="check">
    <div class="logo-container">
      <%= link_to root_path do %>
      <%= image_tag "https://discounttvs.co.uk/wp-content/uploads/2020/01/Logo-3.png", class: "nav-logo" %>
      <% end %>
    </div>

    <div class="nav-btn">
      <div class="navbar-links">
        <ul>
          <li class="nav-link" style="--i: .6s">
            <a href="#">Range<i class="fas fa-caret-down rotate"></i></a>
            <div class="dropdown">
              <ul>
                <li class="arrow"></li>
                <li class="dropdown-link">
                  <%= link_to "4K", tvs_path %>
                </li>
                <li class="dropdown-link">
                  <%= link_to "8K", tvs_path %>
                </li>
                <li class="dropdown-link">
                  <%= link_to "OLED", tvs_path %>
                </li>

              </ul>
            </div>
          </li>
          <li class="nav-link" style="--i: 1.4s">
            <%= link_to 'Our Tvs', tvs_path %>
          </li>
          <li class="nav-link" style="--i: 1.8s">
            <%= link_to 'About Us', root_path %>
          </li>
          <% if current_user.try(:admin?) == true %>
            <li class="nav-link" style="--i: 2.2s">
              <%= link_to "Create Tv", new_tv_path %>
            </li>
          <% end %>
          <% if user_signed_in? %>
          <li class="nav-link" style="--i: 1.8s">
            <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
          </li>
          <% else %>
          <li class="nav-link" style="--i: 1.8s">
            <%= link_to 'Log In', new_user_session_path %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="hamburger-menu-container">
        <div class="hamburger-menu">
          <div></div>
        </div>
    </div>
  </div>
</header>




